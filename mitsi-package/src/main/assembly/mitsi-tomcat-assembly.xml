<assembly>
	<id>bundle</id> 
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<!--files>
		<file>
			<source>target/my-app-1.0.jar</source>
			<outputDirectory></outputDirectory>
			<destName>my-app.jar</destName>
			<fileMode>0644</fileMode>
		</file>
	</files-->
	<fileSets>
			<fileSet>
				<outputDirectory></outputDirectory>
				<directory>src/main/resources</directory>
				<filtered>true</filtered>
			</fileSet>
			<fileSet>
				<outputDirectory></outputDirectory>
				<directory>src/main/bin-linux</directory>
				<filtered>true</filtered>
			    <lineEnding>unix</lineEnding>
			    <fileMode>0755</fileMode>
			</fileSet>
			<!-- fileSet>
				<outputDirectory></outputDirectory>
				<directory>src/main/binary</directory>
				<filtered>false</filtered>
			</fileSet -->
			<fileSet>
				<outputDirectory>apache-tomcat-8.0.20/lib</outputDirectory>
				<directory>../lib</directory>
				<filtered>false</filtered>
			</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>apache-tomcat-8.0.20/webapps</outputDirectory>
			<outputFileNameMapping>mitsi.war</outputFileNameMapping>
			<includes>
				<include>org.mitsi:mitsi-war</include>
			</includes>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>org.apache.tomcat:tomcat</include>
			</includes>
			<unpack>true</unpack>
		    <unpackOptions>
		        <excludes>
		            <exclude>**/webapps/examples/**</exclude>
		        </excludes>
		    </unpackOptions>
    	</dependencySet>
		<!--dependencySet>
			<outputDirectory>apache-tomcat-8.0.20/lib</outputDirectory>
			<includes>
				<include>oracle:oracle-jdbc-driver</include>
			</includes>
			<unpack>false</unpack>
		</dependencySet-->
	</dependencySets>
</assembly>
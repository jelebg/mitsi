	<name>Mitsi webapp for centralized database access</name>

	<url>http://jelebg.github.io/mitsi/</url>

	<scm>
		<connection>scm:git:https://github.com/jelebg/mitsi.git</connection>
	  <tag>HEAD</tag>
  </scm>

	<modules>
		<module>commons</module>
		<module>mitsi-core</module>
